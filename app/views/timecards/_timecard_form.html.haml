.modal-header
  %h1 
    = timecard.new_record? ? 'New Timecard' : "Editing timecard #{timecard.title}"
= simple_form_for timecard, class: 'clearfix', remote: true do |f|   
  .modal-body     
    = f.input :title     
    = f.input :note     
    = f.input :completed, as: :string, input_html: { class: 'datetimepicker', value: timecard.completed.present? ? localize(timecard.completed, format: '%m/%d/%Y at %I:%M') : nil }
  .modal-footer     
    = f.submit 'Save', class: 'btn btn-primary'